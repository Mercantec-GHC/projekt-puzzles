@using System.Threading.Tasks
@inject AppState state
@inject AdvertService ad
@inject NavigationManager nav

<div class="single-advert">
    <h1>@advert.Title</h1>
    <div class="split">

        <div class="text">
            <h3>@advert.PieceAmount Pieces</h3>

            <p>
                by 
                <a href="/user/@advert.User.Username/1" class="gold">@advert.User.Username</a>
            </p>
            <p>&#9993; @advert.User.Email</p>
            <p>&#9742; @advert.User.PhoneNumber</p>

            @if (advert.IsSold)
            {
                <p class="warning">Has been sold!</p>
            }

            <p>Price: @(advert.Price)kr.</p>

            <p>@advert.Description</p>

            
            <div>
            <p>Puzzle dimensions</p>
            <p>Width: @advert.PuzzleDimensions.Width</p>
            <p>Height: @advert.PuzzleDimensions.Height</p>
            </div>
            
            <div>
            <p>Box dimensions</p>
            <p>Width: @advert.BoxDimensions.Width</p>
            <p>Height: @advert.BoxDimensions.Height</p>
            <p>Depth: @advert.BoxDimensions.Depth</p>
            </div>

            @if (state.CurrentUser != null)
                @if (state.CurrentUser.UserId == @advert.User.UserId)
                {
                    <div class="button-row">
                        <button @onclick="ToggleSold">@soldButtonText</button>
                    </div>
                    <div class="button-row">
                        <a href="/edit-advert/@advert.AdvertId" class="highlight">Edit advert</a>
                        <button onclick="document.getElementById('delete-confirm').showModal()" class="warning">Delete advert</button>
                    </div>
                }
        </div>

        <div>
            <AdvertImage Picture="advert.Picture" />
        </div>
    </div>
    
    
</div>

<dialog id="delete-confirm">
    <h3>Delete advert</h3>
    <p>Are you sure you want to delete this advert?</p>

    <div class="button-row">
        <button class="outline" onclick="document.getElementById('delete-confirm').close()">Cancel</button>
        <button class="warning" @onclick="DeleteAdvert">Delete</button>
    </div>
</dialog>


@code {
    [Parameter]
    public Advert advert { get; set; }

    string soldButtonText = "Mark as sold";


    private async Task DeleteAdvert()
    {
        await ad.DeleteAdvertAsync(advert.AdvertId);

        nav.NavigateTo($"/user/{advert.User.Username}/1");
    }

    private async Task ToggleSold()
    {
        if (advert.IsSold)
        {
            advert.IsSold = false;
            soldButtonText = "Mark as sold";
        }
        else
        {
            advert.IsSold = true;
            soldButtonText = "Mark as for sale";
        }

        await ad.UpdateAdvertAsync(advert);
    }

    protected override void OnInitialized()
    {
        if (advert.IsSold)
        {
            soldButtonText = "Mark as for sale";
        }
    }
}
