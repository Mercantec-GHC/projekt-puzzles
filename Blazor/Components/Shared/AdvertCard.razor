@inject NavigationManager NavigationManager

<div class="ad" @onclick="() => OpenAdvert(advert.AdvertId)">
    <p>@advert.Title</p>
    <div class="image-container">
        <AdvertImage Picture="advert.Picture" />
    </div>
    <p>
        <span>@advert.PieceAmount P</span>

        // Show a warning if the advert is sold, otherwise display the price
        @if (advert.IsSold)
        {
            <span class="warning">Sold</span>
        }
        else
        {
            <span>@(advert.Price)Kr.</span>
        }
    </p>
</div>

@code {
    /// <summary>
    /// The advert to display in the card.
    /// </summary>
    [Parameter]
    public Advert advert { get; set; }

    /// <summary>
    /// Navigates to the advert details page for the given advert ID.
    /// </summary>
    /// <param name="id">The ID of the advert to open.</param>
    void OpenAdvert(int id)
    {
        // Use the NavigationManager to go to the advert details page
        NavigationManager.NavigateTo($"/advert/{id}");
    }
}